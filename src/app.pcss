@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
	body {
		@apply relative flex flex-col min-h-screen max-w-full  antialiased;
	}

	h1 {
		@apply text-4xl md:text-5xl lg:text-6xl;
	}

	h2 {
		@apply text-2xl md:text-3xl lg:text-4xl;
	}

	h3 {
		@apply text-lg md:text-xl lg:text-2xl;
	}

	.p-section {
		@apply px-4 md:px-8 lg:px-12 xl:px-16 2xl:px-20 py-4 md:py-6 lg:py-8 xl:py-10;
	}
}

